# 本地开发环境配置示例
# 复制此文件为 application-local.yaml 并填入您的实际配置

spring:
  rabbitmq:
    password: your_rabbitmq_password
    username: your_rabbitmq_username
  data:
    redis:
      host: localhost
      port: 6379
    mongodb:
      uri: mongodb://root:example@localhost:27017/bigchuang?authSource=admin
      username: root
      password: example
      database: bigchuang
      authentication-database: admin
  datasource:
    url: jdbc:mysql://127.0.0.1:3306/career_plan
    username: user
    password: secret
  jpa:
    hibernate:
      ddl-auto: create-drop
    database: mysql
  ai:
    model:
      embedding: openai
      chat: deepseek
    ollama:
      base-url: http://localhost:11434
      embedding:
        options:
          model: nomic-embed-text
    deepseek:
      api-key: your_deepseek_api_key_here
      chat:
        options:
          model: deepseek-chat
          temperature: 0.8
    openai:
      api-key: your_openai_api_key_here
      base-url: https://dashscope.aliyuncs.com/compatible-mode
      embedding:
        options:
          model: text-embedding-v4

jwt:
  secret: your_jwt_secret_here
  sessionTime: 86400

management:
  endpoints:
    web:
      exposure:
        include: "*"

alioss:
  OSS_ACCESS_KEY_ID: your_oss_access_key_id
  OSS_ACCESS_KEY_SECRET: your_oss_access_key_secret
  bucket: bc-resume